<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h2 class="col-6 offset-2">Login</h2>
    <div class="col-6 offset-2">
        <form action="/login" method="POST" class="needs-validation" novalidate>
          <div class="mb-3"><label for="username" class="form-label">username</label>
            <input required name="username" id="username" type="text" class="form-control"/>
        </div>  
        <div class="mb-3"><label for="password" class="form-label">password</label>
            <input required name="password" id="password" type="password" class="form-control"/>
        </div> 
        <button class="btn btn-success">Login</button> 
        </form>
    </div>
</div>