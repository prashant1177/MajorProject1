<% layout("./layouts/boilerplate") %>
<body> 
    <div class="showOuterContainer rounded-4">
    <div class="row my-4 mx-2">
        <img src="<%= listing.image %>" class="card-img-top show-img col rounded-5" alt="<%= listing.title %>">
        <div class="col showContainer1">
            <div><h3><%= listing.title %></h3><br>
            <p><%= listing.description %></p></div>

            <div class="row"><a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col">Edit Listing</a>
                <form action="/listings/<%= listing._id %>?_method=DELETE" method="post" class="col"><button class="btn btn-danger">Remove Listing</button></form></div>
        </div>
    </div>
    <h4 class="my-4 mx-4">Details</h4>
    <div class="px-4 border my-4 mx-4">
    <div class="row my-4">
        <label class="col"><strong>Price</strong></label>
        <label class="col"> &#x20B9;<%= listing.price %>/Per KM</label>
    </div>
    <div class="row my-4">
        <label class="col"><strong>Capacity</strong></label>
        <label class="col"><%= listing.capacity %> Peoples</label>
    </div>
    <div class="row my-4">
        <label class="col"><strong>Location</strong></label>
        <label class="col"><%= listing.location %></label>
    </div></div>
</div>
</body>
