<% layout("./layouts/boilerplate") %>
<div class="d-flex justify-content-center">
  <div class=" w-75">
  <h2 class="text-center mt-4 my-4">EDIT LISTING</h2>
  <form
    enctype="multipart/form-data"
    method="POST"
    action="/listings/<%= listing._id %>?_method=PUT"
    class="container mb-5 needs-validation"
    novalidate
  >
    <label for="exampleFormControlInput1" class="form-label">Title</label>
    <input
      required
      name="title"
      value="<%= listing.title %>"
      type="text"
      class="form-control"
    />
    <br />

    <br /><label for="exampleFormControlInput1" class="form-label"
      >Description</label
    >
    <textarea required name="description" class="form-control">
<%= listing.description %></textarea
    >

    <br /><label for="exampleFormControlInput1" class="form-label">Image</label>
    <input value="<%= listing.image %>" name="image" type="file" class="form-control" />

    <br /><label for="exampleFormControlInput1" class="form-label"
      >Price (per day)</label
    >
    <input
      required
      name="price"
      value="<%= listing.price %>"
      type="number"
      class="form-control"
    />

    <br /><label for="exampleFormControlInput1" class="form-label"
      >Location</label
    >
    <input
      required
      name="location"
      value="<%= listing.location %>"
      type="text"
      class="form-control"
    />

    <br /><label for="exampleFormControlInput1" class="form-label"
      >Capacity</label
    >
    <input
      required
      name="capacity"
      value="<%= listing.capacity %>"
      type="number"
      class="form-control"
    />

    <button class="btn btn-dark px-4 py-2 my-4">Submit</button>

    <a href="/listings/<%= listing._id %>" class="btn btn-danger px-4 py-2 my-4"
      >Cancel</a
    >
  </div>
</div>
